<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TheAllClasses" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <item name="android:buttonStyle">@style/AppButtonStyle</item>

        <!-- Set the background color -->
        <item name="android:windowBackground">@android:color/white</item>

<!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->
        <item name="android:fitsSystemWindows">true</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <!-- Set the hint color for EditText -->
        <item name="android:textColorHint">@color/textSecondary</item>

        <!-- Set the text color for TextView -->
        <item name="android:textColor">@color/textPrimary</item>
    </style>
    <!-- Button Style -->
    <style name="AppButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@color/buttonBackground</item>
        <item name="android:textColor">@color/buttonText</item>
    </style>
</resources>
